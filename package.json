{
  "name": "leetcode-vscode-timer",
  "displayName": "leetcode-vscode-timer",
  "description": "A focused interview simulation tool that tracks your time and restricts distractions while solving coding challenges.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leetcode-timer",
          "title": "Leetcode timer",
          "icon": "resources/time-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "leetcode-timer": [
        {
          "type": "webview",
          "id": "timer-controls",
          "name": "Timer Controls"
        }
      ]
    },
    "commands": [
      {
        "command": "leetcode-vscode-timer.startTask",
        "title": "Start leetcode task"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build:webview": "cd src/webview && npm run build",
    "build:all": "npm run build:webview && npm run compile",
    "compile": "tsc -p ./",
    "dev:webview": "cd src/webview && npm run dev",
    "watch": "tsc -watch -p ./",
    "watch:webview": "cd src/webview && npm run watch",
    "watch:all": "npm run watch & npm run watch:webview",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "preact": "^10.28.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
